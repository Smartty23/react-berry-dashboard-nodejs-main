{
  "version": 2,
  "builds": [
    {
      "src": "react-ui/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api-server-nodejs/src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api-server-nodejs/src/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "react-ui/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}

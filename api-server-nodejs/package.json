{
    "name": "api-server-nodejs",
    "version": "1.0.0",
    "description": "RESTful back-end for Node.js and Express.js",
    "license": "Commercial",
    "author": "AppSeed.us",
    "main": "src/index",
    "build": {
        "yarn": "v16.13.0,v17.0.0,v18.0.0"
    },     
    "scripts": {
        "start": "pm2 start production.config.json",
        "start-no-daemon": "pm2 start production.config.json --no-daemon",
        "start-node": "node build/index.js",
        "dev": "ts-node-dev src/index.ts",
        "test": "jest -i --colors --verbose --detectOpenHandles",
        "lint": "eslint src --ext .ts",
        "build": "tsc -p tsconfig.build.json",
        "typecheck": "tsc --noEmit",
        "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-passport-logout": "^0.1.0",
        "joi": "^17.12.3",
        "jsonwebtoken": "^9.0.2",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "sqlite3": "^5.1.7",
        "pm2": "^5.3.1",
        "typeorm": "^0.3.20"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.30",
        "@types/passport-jwt": "^4.0.1",
        "@types/sqlite3": "^3.1.11",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^7.3.1",
        "@typescript-eslint/parser": "^7.3.1",
        "eslint": "^8.57.0",
        "eslint-config-airbnb-typescript": "^18.0.0",
        "eslint-plugin-import": "^2.29.1",
        "jest": "^29.7.0",
        "supertest": "^6.3.4",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.4.3"
    }
}
